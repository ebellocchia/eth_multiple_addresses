{
  "name": "eth_multiple_addresses",
  "author": "Emanuele Bellocchia",
  "description": "Smart contract that allows generating multiple ETH addresses to receive payments on a single ETH account",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebellocchia/eth_multiple_addresses.git"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "recompile": "npx hardhat compile --force",
    "deploy": "npx hardhat deploy --network",
    "verify": "npx hardhat verify --network",
    "coverage": "npx hardhat coverage",
    "test": "npx hardhat test --parallel",
    "run-node": "npx hardhat node",
    "contract-docs": "npx hardhat docgen",
    "contract-size": "npx hardhat size-contracts",
    "contract-flatten": "npx hardhat flatten contracts/ForwarderFactory.sol > ForwarderFactory_Flattened.sol"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@types/node": "^20.2.5",
    "hardhat": "^2.17.1",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-docgen": "^1.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "dotenv": "^16.0.3"
  }
}
